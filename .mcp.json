{
  "mcpServers": {
    "kubernetes": {
      "command": "npx",
      "args": [
        "-y",
        "kubernetes-mcp-server@latest"
      ],
      "env": {
        "KUBECONFIG": "${HOME}/.kube/config"
      }
    },
    "ssh": {
      "command": "npx",
      "args": [
        "@aiondadotcom/mcp-ssh"
      ]
    },
    "github-gh": {
      "command": "/home/kblack0610/dev/home/binks-agent-orchestrator/mcps/github-gh/target/release/github-gh-mcp",
      "args": [],
      "env": {
        "RUST_LOG": "info"
      }
    },
    "sysinfo": {
      "command": "/home/kblack0610/dev/home/binks-agent-orchestrator/mcps/sysinfo-mcp/target/release/sysinfo-mcp",
      "args": [],
      "env": {
        "RUST_LOG": "info"
      }
    },
    "inbox": {
      "command": "/home/kblack0610/dev/home/binks-agent-orchestrator/mcps/inbox-mcp/target/release/inbox-mcp",
      "args": [],
      "env": {
        "INBOX_PATH": "${HOME}/.notes/inbox",
        "RUST_LOG": "info"
      }
    },
    "notify": {
      "command": "/home/kblack0610/dev/home/binks-agent-orchestrator/mcps/notify-mcp/target/release/notify-mcp",
      "args": [],
      "env": {
        "SLACK_WEBHOOK_URL": "${SLACK_WEBHOOK_URL}",
        "DISCORD_WEBHOOK_URL": "${DISCORD_WEBHOOK_URL}",
        "RUST_LOG": "info"
      }
    },
    "agent": {
      "command": "/home/kblack0610/dev/home/binks-agent-orchestrator/agent/target/release/agent",
      "args": [
        "serve"
      ],
      "env": {
        "OLLAMA_URL": "http://192.168.1.4:11434",
        "OLLAMA_MODEL": "llama3.1:8b"
      }
    },
    "filesystem": {
      "command": "/home/kblack0610/dev/home/binks-agent-orchestrator/mcps/filesystem-mcp/target/release/filesystem-mcp",
      "args": [],
      "env": {
        "FS_CONFIG_PATH": "${HOME}/.binks/filesystem.toml",
        "RUST_LOG": "info"
      }
    },
    "web-search": {
      "command": "/home/kblack0610/dev/home/binks-agent-orchestrator/mcps/web-search-mcp/target/release/web-search-mcp",
      "args": [],
      "env": {
        "SEARXNG_URL": "http://searxng-service.ai-services.svc.cluster.local:8080",
        "RUST_LOG": "info"
      }
    }
  }
}
