# Multi-stage Dockerfile for binks-agent
# Build: docker build -f Dockerfile.agent -t binks-agent .

# ============================================
# Stage 1: Build
# ============================================
# Using nightly for edition2024 support (required by rmcp)
FROM rustlang/rust:nightly-bookworm-slim AS builder

# Install build dependencies
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /build

# Copy agent source
COPY agent/Cargo.toml agent/Cargo.lock* ./agent/
COPY agent/src ./agent/src
COPY agent/static ./agent/static

# Copy mcp-common dependency (required even as optional - Cargo validates path)
COPY common/mcp-common ./common/mcp-common

# Create a minimal workspace Cargo.toml with only the members we need
# (Full workspace Cargo.toml references members not copied to Docker)
RUN cat > Cargo.toml << 'EOF'
[workspace]
resolver = "2"
members = [
    "agent",
    "common/mcp-common",
]

[workspace.package]
version = "0.1.0"
edition = "2021"

[workspace.dependencies]
# Internal crates
mcp-common = { path = "common/mcp-common" }

# Async runtime
tokio = { version = "1", features = ["full", "process", "io-std"] }
async-trait = "0.1"

# Serialization
serde = { version = "1", features = ["derive"] }
serde_json = "1"
toml = "0.8"
chrono = { version = "0.4", features = ["serde"] }

# Schema generation
schemars = "1.2"

# Error handling
thiserror = "2"
anyhow = "1"

# Logging
tracing = "0.1"
tracing-subscriber = { version = "0.3", features = ["env-filter", "json"] }

# CLI
clap = { version = "4", features = ["derive", "env"] }

# MCP
rmcp = { version = "0.13", features = ["server", "client", "macros", "transport-io", "transport-child-process"] }

[profile.release]
opt-level = 3
lto = true
codegen-units = 1
strip = true
EOF

# Build release binary from workspace root
RUN cargo build --release -p agent

# ============================================
# Stage 2: Runtime
# ============================================
FROM debian:bookworm-slim

# Install runtime dependencies (curl for healthcheck)
RUN apt-get update && apt-get install -y \
    ca-certificates \
    libssl3 \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user
RUN useradd -m -u 1000 binks

# Create data directory for SQLite
RUN mkdir -p /data && chown binks:binks /data

# Copy the binary (built from workspace root)
COPY --from=builder /build/target/release/agent /usr/local/bin/agent

# Switch to non-root user
USER binks
WORKDIR /home/binks

# Expose web server port
EXPOSE 7317

# Environment variables (can be overridden)
ENV OLLAMA_URL=http://ollama:11434
ENV OLLAMA_MODEL=llama3.1:8b
ENV BINKS_DATA_DIR=/data
ENV RUST_LOG=info

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:7317/api/health || exit 1

# Default command: start web server
CMD ["agent", "web", "--port", "7317"]
